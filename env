#!/bin/bash
#bdereims@vmware.com

DNSMASQ=/etc/dnsmasq.conf
HOSTS=/etc/hosts

WHERE=$( ip addr show eth1 | grep inet | head -1 | awk '{print $2}' )

case $WHERE in
	"172.16.100.50/22")
		ALL_CLUSTER=(dell)
		;;
	"172.16.100.20/22")
		ALL_CLUSTER=(intel)
		;;
esac

for CLUSTER in ${ALL_CLUSTER[@]}; do
        RESULT=$( ./extra/check_datastore.sh ${CLUSTER} )
        if [ "${RESULT}" == "Ok!" ]; then
                break
        fi
done

ENV=$CLUSTER
if [[ ! ${CLUSTER} ]]; then
	ENV=${ALL_CLUSTER[0]}
fi

source env-${ENV}
